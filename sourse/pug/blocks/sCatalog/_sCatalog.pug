mixin sCatalogSimilar()
	// start sCatalog
	+b.sCatalog--similar.section#sCatalog&attributes(attributes)
		+b.section-title
			h2 С этим товаром покупают
		+e.slider-wrappper
			+e.slider--js.swiper
